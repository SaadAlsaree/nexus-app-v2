# ===========================================
# NEXUS Docker Environment Variables
# ===========================================
# Copy this file to .env and update the values

# The public-facing URL of the backend API
# This is what the BROWSER uses to connect to the API
# On local machine: http://localhost:5000
# On server: http://YOUR_SERVER_IP:5000 or https://api.yourdomain.com
NEXT_PUBLIC_API_URL=http://localhost:5000

# Docker registry (leave empty for local builds)
DOCKER_REGISTRY=
